body
  background #f3f3f3

.navbar
  margin-top 15px

.brand
  font-family 'Lobster', cursive

.hero-unit
  background-image url('/img/2013tyyc_cover.jpg')
  background-size 100%
  background-repeat no-repeat
  height 540px
  h1
    font-family 'Lobster', cursive
    color white
    position relative
    top 60%
    left 22%
    font-weight 300
  blockquote
    position relative
    left 42%
    top 60%
    small
      color white
    h3
      color white

